<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@color/primaryBlue"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_weight=".07"
        android:padding="5dp"
        android:textSize="20dp"
        android:shadowRadius="2"
        android:shadowColor="@color/primaryBlue"
        android:text="Product Information"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_weight="0.2">
                <ImageView
                    android:id="@+id/view_image"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:src="@color/primaryGreen"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/view_product"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.33"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:padding="8dp"
                        android:background="@drawable/product_background"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:scrollHorizontally="true"
                        android:textSize="16dp"
                        android:textColor="@color/primaryDarkBlue"
                        android:textStyle="bold"
                        android:text="This is marquee text showing Product Name"/>
                    <TextView
                        android:id="@+id/view_price"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.33"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/product_background"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:scrollHorizontally="true"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryDarkBlue"
                        android:text="Rs 45000"/>
                    <TextView
                        android:id="@+id/view_date"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.33"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/product_background"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:scrollHorizontally="true"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryDarkBlue"
                        android:text="25-07-1997"/>
                    <RatingBar
                        android:id="@+id/view_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:rating="3"
                        style="?android:attr/ratingBarStyleSmall"
                        android:isIndicator="true"
                        android:stepSize="0.5"
                        android:max="5"
                        android:gravity="center"
                        android:numStars="5"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingLeft="25dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryRed"
                    android:text="Description"/>
                <TextView
                    android:id="@+id/view_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_weight="0.6"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000000"
                    android:text="loading description info"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@color/primaryBlue"
        android:padding="5dp"
        android:layout_weight="0.07"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:shadowRadius="2"
        android:shadowColor="@color/primaryBlue"
        android:text="Seller Information"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingLeft="25dp"
                    android:textSize="16dp"
                    android:textColor="@color/primaryRed"
                    android:textStyle="bold"
                    android:text="Name"/>
                <TextView
                    android:id="@+id/view_seller"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_weight="0.6"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000000"
                    android:text="loading name info"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="#00000000"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingLeft="25dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/primaryRed"
                    android:text="Email"/>
                <TextView
                    android:id="@+id/view_mail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="loading email info"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="#00000000"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textSize="16dp"
                    android:paddingLeft="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryRed"
                    android:text="Mobile no"/>
                <TextView
                    android:id="@+id/view_mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:text="loading phone info"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="#00000000"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingLeft="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryRed"
                    android:textSize="16dp"
                    android:text="Address"/>
                <TextView
                    android:id="@+id/view_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="loading address info"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryBlue"
            android:orientation="horizontal">
            <ImageView
            android:id="@+id/view_rate_this"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/rate_icon"
            android:background="@null"/>
            <ImageView
                android:id="@+id/view_buy_now"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                app:srcCompat="@drawable/buy_now"
                android:background="@null"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>